@import "../../../../../stylus/imports.variables.styl"


.container-table-unit
  .title-table-unit
    sub-title()
    justify(center)
    align-items( flex-start )
    border-bottom none
    padding-top 28*$px
    padding-bottom 28*$px

    h2
      margin 0
      color $gray

  .layout-table-unit
    padding 21*$px 28*$px

    .table
      display-flex()
      flex-direction( column )

      .table-header
        display-flex()
        background $background_menu

        .t-head
          width percent(0.2)
          padding 14*$px 7*$px
          text-align center

          span
            color $white

      .table-body
        .row-unit
          display-flex()
          border-bottom 1px solid $background_menu
          .t-body
            width calc(100% / 5)
            padding 14*$px 7*$px
            text-align center

  .layout-search-pager
    margin-top 28*$px
    height 52.5*$px
    display-flex()
    justify( space-between )
    align-items( center )

    .panel-search
      input
        form-control(250, 35)

      button
        height 30*$px
        width 100*$px
        border none
        background $background_menu
        color $white
        border-radius $radius
        margin-left 7*$px
        cursor pointer
