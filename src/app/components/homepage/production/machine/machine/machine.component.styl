@import "../../../../../stylus/imports.variables.styl"

.container-form-machine
  padding 28*$px 42*$px

  .layout-form-machine
    display-flex()
    flex-direction(column)

    .title-form-machine
      sub-title()
      justify(center)
      border-bottom none
      padding-top 0
      padding-bottom 28*$px

      h2
        margin 0
        color $gray

    .form-machine
      padding 28*$px 42*$px
      background $white
      form
        .container-inputs
          width percent(0.9)
          margin 0 auto

          .layout-input
            display-flex()
            justify(space-between)

            .container-input
              width percent(0.40)

              label
                display block
                margin 15px  auto
                color $gray1
                font-size 15px
                width percent(1)

                input
                  form-control(250, 35)
                  display block
                  margin-top 5.8px
                  width percent(1)

                select
                  form-control(250, 35)
                  select-control()
                  width percent(1)


    .container-buttons
      display-flex()
      padding 28*$px
      padding-left 0

      .button
        buttons()
