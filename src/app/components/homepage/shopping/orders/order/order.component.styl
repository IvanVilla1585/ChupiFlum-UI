@import "../../../../../stylus/imports.variables.styl"

.container-form-order
  padding 2rem 3rem

  .layout-form-order
    display-flex()
    flex-direction(column)

    .title-form-order
      sub-title()
      justify(center)
      border-bottom none
      padding-top 0
      padding-bottom 2rem

      h2
        margin 0
        color $gray

    .form-order
      padding 2rem 3rem
      background $white
      height 555px
      max-height 555px
      form
        .container-inputs
          width percent(0.9)
          margin 0 auto

          .layout-input
            display-flex()
            justify(space-between)
            &:last-child
              margin-top 1rem
              .layout-table-order
                width percent(1)
                .container-table
                  .head-table
                    display-flex()
                    background $background_menu
                    .title
                      width percent(0.3)
                      padding 1rem 0.5rem
                      text-align center
                      &:nth-child(n + 3)
                        width percent(0.15)
                      &:last-child
                        width percent(0.1)
                      span
                        color $white
                    .actions
                      width percent(0.1)
                  .body-table
                    max-height 350px
                    overflow-y auto
                    .layout-body
                      max-height 350px
                      overflow-y auto
                      .table-body
                        .row-unit
                          display-flex()
                          border-bottom 1px solid $background_menu
                          .t-body
                            width percent(0.3)
                            padding 14*$px 7*$px
                            text-align center
                            &:nth-child(n + 3)
                              width percent(0.15)
                            &:last-child
                              width percent(0.1)

                          .actions
                            display-flex()
                            align-items(center)
                            justify(space-around)
                            width percent(0.1)
                            .container-icons
                              margin 0
                              width 15px
                              height 15px
                              cursor pointer
                              img
                                width percent(1)
                                height percent(1)

                  .row-order
                    display-flex()
                    .t-body
                      width percent(0.3)
                      padding 1rem 0.5rem
                      text-align center
                      &:first-child
                        .ui-autocomplete
                          width percent(1) !important
                      &:nth-child(n + 3)
                        width percent(0.15)
                      &:last-child
                        width percent(0.1)
                      .input
                        width 90%
                        margin 0 auto
                        input, select
                          form-control(80, 35)
                          display block
                          margin-top 5.8px
                          width percent(1)
                        select
                          select-control()
                    .actions
                      display-flex()
                      align-items(center)
                      justify(space-around)
                      width percent(0.1)
                      .container-icons
                        margin 0
                        width 15px
                        height 15px
                        cursor pointer
                        img
                          width percent(1)
                          height percent(1)

            .container-input
              width percent(0.32)
              label
                display block
                margin 15px  auto
                color $gray1
                font-size 15px
                width percent(1)

                input
                  form-control(250, 35)
                  display block
                  margin-top 5.8px
                  width percent(1)

    .container-buttons
      display-flex()
      padding 2rem
      padding-left 0

      .button
        buttons()
        &:nth-child(n - 3)
          margin-right 1rem
