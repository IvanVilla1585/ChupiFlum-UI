@import "./app/stylus/imports.variables.styl"


body
  padding 0
  margin 0
  font-size 16px
  background #F0F0F0

.container-message
  display-flex()
  vertical-center()
  justify( space-between )
  min-width 25rem
  padding 0.5rem 1rem
  position absolute
  top 15px
  right 15px
  z-index 100
  border-radius 5px
  background $background_menu
  .image-message
    width 2rem
    height 2rem
    margin 0
    img
      width 100%
  .text-message
    width 22rem
    color $white

